= render 'signup-header'
.signup5
  .signup5__box
    .signup5__box__header
      支払い方法
    = form_tag(credits_path, method: :post, class: "signup5__box__main",  name: "inputForm") do
      .signup5__box__main__form
        .signup5__box__main__form__group
          .flash
            - if flash[:notice]
              = flash[:notice]
          %label.signup5__box__main__form__group__creditcard
            カード番号
          %span.signup5__box__main__form__group__span
            必須
          = text_field_tag "number", "", class: 'signup5__box__main__form__group__field', placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number"
          = image_tag "credit_logo.png", class: "signup5__box__main__form__group__credit-img"
        .signup5__box__main__form__group
          %label.signup5__box__main__form__group__creditcard
            有効期限
          %span.signup5__box__main__form__group__span
            必須
          .signup5__box__main__form__group__birthday
            .signup5__box__main__form__group__birthday__wrap
              %select#exp_month{name: "exp_month", type: "text", class: 'signup5__box__main__form__group__birthday__wrap__registration'}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span.signup5__box__main__form__group__labels
                月
            .signup5__box__main__form__group__birthday__wrap
              %select#exp_year{name: "exp_year", type: "text", class: 'signup5__box__main__form__group__birthday__wrap__registration'}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span.signup5__box__main__form__group__labels
                年
        .signup5__box__main__form__group
          %label.signup5__box__main__form__group__creditcard
            セキリュティコード
          %span.signup5__box__main__form__group__span
            必須
          = text_field_tag "cvc", "", class: 'signup5__box__main__form__group__field', placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          #card_token
          = submit_tag '次へ進む', class: 'signup5__box__main__form__group__submit', id: "token_submit"
= render 'buyers/buyer-footer'